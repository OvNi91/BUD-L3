<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".change_password">

    <ImageButton
        android:id="@+id/imageButton_retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView_titre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modification du mot de passe"
        android:textColor="#148FC0"
        android:textSize="24sp"
        android:fontFamily="@font/grenoble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <EditText
        android:id="@+id/editText_ancien_mdp"
        android:layout_width="352dp"
        android:layout_height="37dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:background="@drawable/et_custom"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_titre"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_nv_mdp_1"
        android:layout_width="352dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:background="@drawable/et_custom"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nv_mdp_1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_nv_mdp_2"
        android:layout_width="352dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:background="@drawable/et_custom"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nv_mdp_"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView_mot_de_passe_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saisissez l'ancien mot de passe"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_ancien_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_titre" />

    <TextView
        android:id="@+id/textView_nv_mdp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Saisissez votre nouveau mot de passe"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_ancien_mdp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_nv_mdp_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Saisissez Ã  nouveau votre nouveau mot de passe"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_nv_mdp_1"
        app:layout_constraintVertical_bias="0.003" />

    <Button
        android:id="@+id/button_valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_custom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_nv_mdp_2" />

</androidx.constraintlayout.widget.ConstraintLayout>