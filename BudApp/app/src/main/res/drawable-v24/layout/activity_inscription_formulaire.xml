<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inscription_formulaire">

    <ImageButton
        android:id="@+id/imageButton_retour_inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView_inscription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView_inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrivez vous !"
        android:textColor="#148FC0"
        android:textSize="24sp"
        app:fontFamily="@font/grenoble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/textView_email_inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />

    <EditText
        android:id="@+id/editText_email1_inscription"
        android:background="@drawable/et_custom"
        android:layout_width="328dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Adresse mail"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_email_inscription" />

    <EditText
        android:id="@+id/editText_email2_inscription"
        android:layout_width="326dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Confirmez votre adresse mail"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:background="@drawable/et_custom"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_email1_inscription"
        app:layout_constraintVertical_bias="0.098" />

    <EditText
        android:id="@+id/editText_password1_inscription"
        android:layout_width="333dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:background="@drawable/et_custom"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_password_inscription" />

    <TextView
        android:id="@+id/textView_password_inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Mot de passe"
        android:textSize="18sp"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_email_inscription"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_password2_inscription"
        android:layout_width="333dp"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Confirmez votre mot de passe"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:background="@drawable/et_custom"
        android:paddingLeft="15dp"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_password1_inscription" />

    <Button
        android:id="@+id/button_valider_inscription"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_custom"
        android:text="Valider"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/raleway_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_password2_inscription" />

</androidx.constraintlayout.widget.ConstraintLayout>